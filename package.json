{
    "name": "zca-bot",
    "version": "1.0.0",
    "description": "Bot Zalo toàn diện với hệ thống quản lý nhóm, thanh toán và phân quyền",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "build": "tsc",
        "watch": "tsc -w",
        "lint": "eslint . --ext .ts",
        "migration:run": "ts-node src/database/migrations/run.ts",
        "backup": "node scripts/backup.js",
        "restore": "node scripts/restore.js",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit --watch",
        "build:safe": "npm run typecheck && npm run build",
        "fix:unused": "tsc --noEmit --findUnusedParameters"
    },
    "keywords": [
        "zalo",
        "bot",
        "zca-js",
        "typescript",
        "chat-bot",
        "payment",
        "payos"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.1",
        "body-parser": "^1.20.2",
        "crypto": "^1.0.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "node-cron": "^3.0.2",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^5.1.6",
        "typeorm": "^0.3.17",
        "winston": "^3.11.0",
        "zca-js": "latest"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/express": "^4.17.21",
        "@types/node": "^20.9.0",
        "@types/node-cron": "^3.0.10",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "eslint": "^8.53.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}