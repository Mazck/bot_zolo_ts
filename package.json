{
    "name": "zca-bot",
    "version": "1.0.0",
    "description": "Bot Zalo toàn diện với hệ thống quản lý nhóm, thanh toán và phân quyền",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "build": "tsc",
        "watch": "tsc -w",
        "lint": "eslint . --ext .ts",
        "migration:run": "ts-node src/database/migrations/run.ts",
        "backup": "node scripts/backup.js",
        "restore": "node scripts/restore.js",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit --watch",
        "build:safe": "npm run typecheck && npm run build",
        "fix:unused": "tsc --noEmit --findUnusedParameters",
        "test-webhook": "ts-node src/utils/webhookTester.ts",
        "system-check": "ts-node src/utils/systemCheck.ts"
    },
    "keywords": [
        "zalo",
        "bot",
        "zca-js",
        "typescript",
        "chat-bot",
        "payment",
        "payos"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@payos/node": "^1.0.10",
        "axios": "^1.9.0",
        "body-parser": "^2.2.0",
        "crypto": "^1.0.1",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "node-cron": "^4.0.5",
        "qrcode": "^1.5.4",
        "reflect-metadata": "^0.2.2",
        "sqlite3": "^5.1.7",
        "typeorm": "^0.3.24",
        "winston": "^3.17.0",
        "zca-js": "latest"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/express": "^5.0.1",
        "@types/node": "^22.15.18",
        "@types/node-cron": "^3.0.11",
        "@types/qrcode": "^1.5.5",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "eslint": "^9.26.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
