# Biến môi trường cho ZCA Bot
# Sao chép file này thành .env và cập nhật thông tin

# Cấu hình Zalo
BOT_COOKIE='{"cookies": ["cookie1", "cookie2"]}' # Cookie Zalo dạng JSON
BOT_PREFIX="/"
BOT_NAME="ZCA Bot"
BOT_IMEI="00000000-0000-0000-0000-000000000000"
BOT_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/98.0.4758.102 Safari/537.36"

# Cấu hình Database
DB_TYPE="sqlite"            # sqlite hoặc mysql
DB_NAME="zca_bot.sqlite"    # tên file SQLite hoặc tên database MySQL
# DB_HOST="localhost"       # chỉ cần cho MySQL
# DB_PORT="3306"            # chỉ cần cho MySQL
# DB_USERNAME="root"        # chỉ cần cho MySQL
# DB_PASSWORD="password"    # chỉ cần cho MySQL

# Cấu hình PayOS
PAYOS_CLIENT_ID="your_payos_client_id"
PAYOS_API_KEY="your_payos_api_key"
PAYOS_CHECKSUM_KEY="your_payos_checksum_key"
PAYOS_WEBHOOK_SECRET="your_payos_webhook_secret"

# Webhook URL (cần có thể truy cập từ internet)
WEBHOOK_URL="https://your-domain.com/webhook/payos"

# Admin (danh sách ID Zalo cách nhau bởi dấu phẩy)
ADMIN_IDS="1234567890,0987654321"

# Gói dịch vụ (định dạng JSON)
PACKAGES='{
  "basic": {"name": "Gói Cơ bản", "price": 99000, "days": 30, "description": "Dịch vụ bot cơ bản trong 30 ngày"},
  "premium": {"name": "Gói Premium", "price": 249000, "days": 90, "description": "Dịch vụ bot đầy đủ trong 90 ngày"},
  "vip": {"name": "Gói VIP", "price": 899000, "days": 365, "description": "Dịch vụ bot VIP trong 365 ngày"}
}'

# Cấu hình logging
LOG_LEVEL="info"    # debug, info, warn, error